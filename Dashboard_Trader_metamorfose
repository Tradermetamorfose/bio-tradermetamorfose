  </footer>  <script>
    async function fetchStockPrice(ticker, elementId) {
      try {
        const response = await fetch(`https://query1.finance.yahoo.com/v8/finance/chart/${ticker}.SA`);
        const data = await response.json();
        const price = data.chart.result[0].meta.regularMarketPrice;
        document.getElementById(elementId).textContent = `R$ ${price.toFixed(2)}`;
      } catch (error) {
        document.getElementById(elementId).textContent = 'Erro ao carregar';
        console.error('Erro ao buscar preço:', error);
      }
    }

    fetchStockPrice('PETR4', 'petr4');
    fetchStockPrice('VALE3', 'vale3');
  </script></body>
